<?xml version="1.0"?>
<config>
    <modules>
        <PagarMe_Pix>
            <version>##eloom.versao##</version>
        </PagarMe_Pix>
    </modules>
    <global>
        <models>
            <pagarme_pix>
                <class>PagarMe_Pix_Model</class>
            </pagarme_pix>
        </models>
        <blocks>
            <pagarme_pix>
                <class>PagarMe_Pix_Block</class>
            </pagarme_pix>
        </blocks>
        <helpers>
            <pagarme_pix>
                <class>PagarMe_Pix_Helper</class>
            </pagarme_pix>
        </helpers>
        <sales>
            <order>
                <states>
                    <pending_payment translate="label">
                        <visible_on_front>1</visible_on_front>
                    </pending_payment>
                </states>
            </order>
        </sales>
    </global>
    <frontend>
        <layout>
            <updates>
                <pagarme_pix>
                    <file>pagarme/pagarme_pix.xml</file>
                </pagarme_pix>
            </updates>
        </layout>
    </frontend>
    <frontend>
        <translate>
            <modules>
                <PagarMe_Pix>
                    <files>
                        <default>PagarMe_Pix.csv</default>
                    </files>
                </PagarMe_Pix>
            </modules>
        </translate>
    </frontend>
    <admin>
        <translate>
            <modules>
                <PagarMe_Pix>
                    <files>
                        <default>PagarMe_Pix.csv</default>
                    </files>
                </PagarMe_Pix>
            </modules>
        </translate>
    </admin>
</config>